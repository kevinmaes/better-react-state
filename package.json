{
  "name": "better-react-state",
  "version": "0.1.0",
  "description": "A tool to analyze and fix React state management antipatterns",
  "keywords": [
    "react",
    "state-management",
    "linter",
    "code-quality",
    "static-analysis",
    "typescript"
  ],
  "homepage": "https://github.com/kevinmaes/better-react-state",
  "bugs": {
    "url": "https://github.com/kevinmaes/better-react-state/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinmaes/better-react-state.git"
  },
  "license": "MIT",
  "author": "Kevin Maes",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "better-react-state": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "test:examples": "npm run build && node dist/cli.js examples/**/src --format text",
    "test:todo-app": "npm run build && node dist/cli.js examples/todo-app-antipatterns/src --format text",
    "checks": "npm run lint && npm run typecheck && npm run test:coverage",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "dependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "commander": "^13.1.0",
    "glob": "^11.0.3",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.34.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.15.0"
}
